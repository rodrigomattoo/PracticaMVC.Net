@model List<PracticaMVC.Net.Dominio.Entidades.Producto>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var producto in Model)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Precio</td>
                    <td>@Html.ActionLink("Eliminar", "Eliminar", "Producto", new {id = producto.Id}, new {@class = "btn btn-danger"})</td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-dark" asp-controller="Producto" asp-action="Agregar">Agregar</a>
</div>

